<UserControl x:Class="RoboChatWpf.MessageDesign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoboChatWpf"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300" MinWidth="300" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" ></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Name="MessageTxtBlck" FontSize="20" TextWrapping="Wrap" FontFamily="Segoe UI" FontWeight="Bold" MaxWidth="900" Background="CadetBlue" Grid.ColumnSpan="3" Margin="0,0,0.333,0" HorizontalAlignment="Right" MinWidth="200"/>
      

        <TextBlock Name="TimePick" Grid.Column="3"  FontSize="10" VerticalAlignment="Bottom"></TextBlock>


    </Grid>
</UserControl>
