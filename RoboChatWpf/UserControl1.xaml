<UserControl x:Class="RoboChatWpf.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoboChatWpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border CornerRadius="50" BorderBrush="Black" BorderThickness="2"> 
            <TextBox Name="NameChangerTxtB" Margin="15" Grid.Row="0" FontSize="30" FontFamily="Seoge UI" FontStretch="SemiExpanded" FontWeight="Bold"></TextBox>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Click="OkBtn_Click" Grid.Column="0" Name="OkBtn" Content="OK" FontSize="50" Margin="60" FontFamily="Segoe UI" FontWeight="Black"></Button>
            <Button Click="OkBtn_Click" Grid.Column="1" Name="CancelBtn" Content="Cancel" FontSize="50" Margin="60" FontFamily="Segoe UI" FontWeight="Black"></Button>
        </Grid>
    </Grid>
</UserControl>
